<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_calculadora"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvisor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:background="@drawable/visor"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="36sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>



        <Button
            android:id="@+id/bsomar"
            style="@style/botoes_sinais"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="+" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b7"
            style="@style/botoes_numeros"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="7" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/b8"
            style="@style/botoes_numeros"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="8" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/b9"
            style="@style/botoes_numeros"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="9" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bsubtrair"
            style="@style/botoes_sinais"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="-" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b4"
            style="@style/botoes_numeros"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="4" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/b5"
            style="@style/botoes_numeros"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="5" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/b6"
            style="@style/botoes_numeros"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="6" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bmultiplicar"
            style="@style/botoes_sinais"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="*" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b1"
            style="@style/botoes_numeros"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="1" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/b2"
            style="@style/botoes_numeros"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="2" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/b3"
            style="@style/botoes_numeros"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="3" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bdividir"
            style="@style/botoes_sinais"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="/" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b0"
            style="@style/botoes_numeros"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@drawable/grad_numeros"
            android:text="0"
            android:textColor="#ffffff" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <Button
            android:id="@+id/blimpar"
            style="@style/botoes_sinais"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/grad_c"
            android:text="C"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

        <Button
            android:id="@+id/bigual"
            style="@style/botoes_sinais"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/grad_igual"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />



    </LinearLayout>


</LinearLayout>
